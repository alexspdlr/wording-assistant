{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:functional/external-recommended",
    "plugin:functional/recommended",
    "plugin:functional/stylistic" 
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "functional",
        "only-warn" 
    ],
    "rules": {
        "functional/rule-name": "error",
        "import/extensions": "off" 
    },
    "settings": {
        "import/extensions": [".js", ".mjs",".ts"] 
      } 
}
